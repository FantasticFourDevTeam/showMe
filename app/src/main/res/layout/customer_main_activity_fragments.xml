<RelativeLayout
    android:id="@+id/main_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#71B7E6"
    android:layout_height="match_parent"
    tools:context=".CustomerFragmentsMainActivity">

    <LinearLayout
        android:id="@+id/toolbar_up"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:background="#71B7E6"
        android:orientation="horizontal"
        android:weightSum="700.0">

        <ImageView
            android:id="@+id/main_fragment_settings_item"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="100"
            android:onClick="openMenuPage"
            android:padding="2dp"
            android:src="@drawable/menu4"/>

        <ImageView
            android:id="@+id/main_frgamnet_notification_item"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="100"
            android:background="#71B7E6"
            android:padding="2dp"
            android:src="@drawable/notification_icon"/>

        <Button
        android:id="@+id/main_fragment_main_city_item"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="300"
        android:background="#71B7E6"
        android:text="WhoGO"
        android:textColor="#ffffff"/>
        <Button
            android:id="@+id/main_fragment_main_current_location"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="300"
            android:background="#71B7E6"
            android:text="Current Location"
            android:visibility="gone"
            android:textColor="#ffffff"/>

            <EditText
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_weight="10"
                android:id="@+id/Message_unread"
                android:background="@drawable/circle"
                android:gravity="center"
                android:layout_gravity="top|right"
                android:editable="false"
                android:textColor="@color/White"
                android:textSize="15sp"
                android:layout_marginLeft="2dp"
                android:visibility="invisible"
            />

        <ImageView
            android:id="@+id/main_fragment_search"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="100"
            android:actionViewClass="android.widget.SearchView"
            android:background="#71B7E6"
            android:padding="4dp"
            android:src="@drawable/search_icon"/>

        <ImageView
            android:id="@+id/main_fragment_filter"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="100"
            android:background="#71B7E6"
            android:onClick="openFilterPage"
            android:padding="5dp"
            android:src="@drawable/filer_icon"/>

    </LinearLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_customer_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#71B7E6"
        android:elevation="6dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="50dp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/tab_customer_layout"
        android:background="#ffffff"/>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/colorAccent"
        app:menu="@menu/bottom_navigation_bar_items"/>
</RelativeLayout>