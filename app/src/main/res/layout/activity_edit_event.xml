<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context=".Tickets.TicketsPriceActivity">

    <LinearLayout
        android:id="@+id/imageLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_event_pic"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            />

        <Button
            android:id="@+id/btn_change_pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_event_pic"
            android:text="@string/update_picture"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/imageLayout"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/scrollView2"
                android:layout_alignStart="@+id/scrollView2"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="@string/name"/>

                    <EditText
                        android:id="@+id/et_name_edit"
                        android:layout_width="200dp"
                        android:textSize="16dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_centerHorizontal="true"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:text="@string/artist"/>

                    <EditText
                        android:id="@+id/et_artist_edit"
                        android:layout_width="200dp"
                        android:layout_marginTop="15dp"
                        android:textSize="16dp"

                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                       />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:text="@string/description"/>


                    <EditText
                        android:id="@+id/et_description_edit"
                        android:layout_width="300dp"
                        android:textSize="16dp"
                        android:inputType="textMultiLine"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_centerHorizontal="true"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:text="@string/place"/>


                    <EditText
                        android:id="@+id/et_place_edit"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:textSize="16dp"
                        android:layout_centerHorizontal="true"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:text="@string/address"/>


                    <EditText
                        android:id="@+id/et_address_edit"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:textSize="16dp"
                        android:layout_centerHorizontal="true"
                        />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_validate_address_edit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/validate_address"
                        android:textSize="12sp"/>

                    <ImageView
                        android:id="@+id/iv_val_add_edit"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"/>
                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_quantity_edit_event"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="@string/quantity"/>

                    <EditText
                        android:id="@+id/et_quantity_edit_event"
                        android:layout_width="270dp"
                        android:layout_height="wrap_content"
                        android:imeActionLabel="Done"
                        android:textSize="16sp"
                        android:layout_marginTop="20dp"
                        android:layout_centerHorizontal="true"
                        android:inputType="number"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_price_edit_event"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="@string/price"/>

                    <EditText
                        android:id="@+id/et_price_edit_event"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:imeActionLabel="Done"
                        android:layout_marginTop="20dp"
                        android:textSize="16sp"
                        android:layout_centerHorizontal="true"
                        android:inputType="number"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/checkBoxPrice_edit_event"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="false"
                        android:visibility="gone"
                        android:text="@string/price_per_seat"/>
                    <CheckBox
                        android:id="@+id/checkBoxFree_edit_event"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/yET"
                        android:layout_toEndOf="@+id/tagsET"
                        android:layout_toRightOf="@+id/tagsET"
                        android:layout_weight="1"
                        android:checked="false"
                        android:text="@string/free"/>
                    <Button
                        android:id="@+id/btn_price_details_edit_event"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Price details"
                        android:visibility="gone"/>
                </LinearLayout>
                <fr.ganfra.materialspinner.MaterialSpinner
                    android:id="@+id/atmSpinner_edit"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:ms_alignLabels="false"
                    app:ms_arrowColor="@color/colorPrimary"
                    app:ms_arrowSize="16dp"
                    app:ms_baseColor="@color/colorPrimary"
                    app:ms_enableErrorLabel="false"
                    app:ms_enableFloatingLabel="false"
                    app:ms_errorColor="@color/Red"
                    app:ms_hint="Is there an ATM?"
                    app:ms_hintColor="@color/DarkRed"
                    app:ms_multiline="false"
                    app:ms_thickness="2dp"/>

                <fr.ganfra.materialspinner.MaterialSpinner
                    android:id="@+id/toiletSpinner_edit"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:ms_alignLabels="false"
                    app:ms_arrowColor="@color/colorPrimary"
                    app:ms_arrowSize="16dp"
                    app:ms_baseColor="@color/colorPrimary"
                    app:ms_enableErrorLabel="false"
                    app:ms_enableFloatingLabel="false"
                    app:ms_errorColor="@color/Red"
                    app:ms_hint="Toilets amount"
                    app:ms_hintColor="@color/DarkRed"
                    app:ms_multiline="false"
                    app:ms_thickness="2dp"/>

                <fr.ganfra.materialspinner.MaterialSpinner
                    android:id="@+id/handicapToiletSpinner_edit"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:ms_alignLabels="false"
                    app:ms_arrowColor="@color/colorPrimary"
                    app:ms_arrowSize="16dp"
                    app:ms_baseColor="@color/colorPrimary"
                    app:ms_enableErrorLabel="false"
                    app:ms_enableFloatingLabel="false"
                    app:ms_errorColor="@color/Red"
                    app:ms_hint="Handicap toilets amount"
                    app:ms_hintColor="@color/DarkRed"
                    app:ms_multiline="false"
                    app:ms_thickness="2dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="Hall capacity:"/>


                    <EditText
                        android:id="@+id/et_hall_cap_edit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:inputType="number"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="Parking:"/>


                    <EditText
                        android:id="@+id/et_parking_edit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:inputType="number"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:visibility="gone"
                        android:text="Tags:"/>

                    <EditText
                        android:id="@+id/et_tags_edit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_weight="2"/>
                </LinearLayout>

                <Button
                    android:id="@+id/btn_save_edit_event"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/finish"/>
            </LinearLayout>

        </ScrollView>
    </LinearLayout>
</RelativeLayout>
