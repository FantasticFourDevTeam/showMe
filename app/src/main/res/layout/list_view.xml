<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="400dp"
                android:background="@android:drawable/dialog_holo_light_frame">

    <LinearLayout
        android:id="@+id/tableRowAll"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ffffff"
        android:orientation="vertical"
        android:weightSum="200">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="155"
            android:scaleType="centerCrop"/>

        <RelativeLayout
            android:id="@+id/tableRow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="20"
            android:baselineAligned="false"
           android:orientation="vertical"
            android:stretchColumns="*"
            android:transitionGroup="false">

            <TextView
                android:id="@+id/event_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elegantTextHeight="false"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:paddingRight="4dp"
                android:paddingLeft="4dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="12/15/2016"
                android:textColor="#454545"
                />

            <TextView
                android:id="@+id/event_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:paddingRight="4dp"
                android:paddingLeft="4dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="comedy store"
                android:textColor="#000000"
                android:textSize="18sp"
                android:layout_below="@id/event_date"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/event_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:paddingRight="4dp"
                android:paddingLeft="4dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="apartment"
                android:layout_below="@id/event_name_tv"
                android:textColor="#666666"/>

            <TextView
                android:id="@+id/event_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:paddingRight="4dp"
                android:paddingLeft="4dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="Chelnov 29, Tel Aviv"
                android:layout_below="@id/event_location"
                android:textColor="#666666"/>

        </RelativeLayout>

        <TableRow
            android:id="@+id/tableRow"
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="24"
            android:baselineAligned="true"
            android:divider="#3f3232"
            android:gravity="center_vertical|start"
            android:stretchColumns="*"
            android:transitionGroup="true"
            android:weightSum="200">

            <TextView
                android:id="@+id/tags"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_marginTop="0dp"
                android:layout_weight="110"
                android:background="@drawable/row_order1"
                android:gravity="center_vertical"
                android:paddingLeft="4dp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:text="#Party #Show"
                android:textColor="#71B7E6"
                android:textSize="10sp"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_marginTop="0dp"
                android:layout_weight="45"
                android:background="@drawable/row_order1"
                android:padding="6dp"
                android:src="@mipmap/shh"/>

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_marginTop="0dp"
                android:layout_weight="45"
                android:background="@drawable/row_order1"
                android:padding="3dp"
                android:src="@mipmap/whh"
                />
        </TableRow>
    </LinearLayout>

    <TextView
        android:id="@+id/event_price"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="right"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="#c8e1e1e1"
        android:gravity="center_vertical|center_horizontal"
        android:text="150$-2000$"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="12sp"
        android:minWidth="50dp"/>

    <TextView
        android:id="@+id/event_expired"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="start"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="#c8e1e1e1"
        android:gravity="center_vertical|center_horizontal"
        android:text=""
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="12sp"
        android:visibility="gone"
        android:minWidth="50dp"/>
    <TextView
        android:id="@+id/event_canceled"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="start"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="#c8e1e1e1"
        android:gravity="center_vertical|center_horizontal"
        android:text=""
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="12sp"
        android:visibility="gone"
        android:minWidth="50dp"/>
</RelativeLayout>